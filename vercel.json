{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/next.config.js",
      "use": "@vercel/next",
      "config": { "distDir": ".next" }
    },
    {
      "src": "apps/api/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ]
}